<?xml version="1.0" encoding="utf-8"?>
    <selector xmlns:android="http://schemas.android.com/apk/res/android">
        <item android:state_pressed="true">
            <shape xmlns:android="http://schemas.android.com/apk/res/android">
                <gradient android:angle="270" android:endColor="#EE017483" android:startColor="#F00496A7" />
                <stroke android:width="1.5dp" android:color="#E400798A" />
                <corners android:radius="30dp" />
                <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            </shape>
        </item>
        <item>
            <shape xmlns:android="http://schemas.android.com/apk/res/android">
                <gradient android:angle="270" android:endColor="#90008B9C" android:startColor="#9200BCD4" />
                <stroke android:width="1.5dp" android:color="#E400798A" />
                <stroke android:width="1dp" android:color="#83029FB3" />
                <corners android:radius="40dp" />
                <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>
        </item>
    </selector>
